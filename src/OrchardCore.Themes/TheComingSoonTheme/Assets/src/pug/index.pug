doctype html
html(lang='en')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='')

        title Coming Soon - Start Bootstrap Theme

        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

        // Font Awesome icons (free version)
        script(src='https://use.fontawesome.com/releases/v5.15.3/js/all.js', crossorigin='anonymous')

        // Google fonts
        link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i', rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Merriweather:300,300i,400,400i,700,700i,900,900i', rel='stylesheet')

        // Core theme CSS (includes Bootstrap)
        link(href='css/styles.css', rel='stylesheet')

    body

        .overlay
        video(playsinline='playsinline', autoplay='autoplay', muted='muted', loop='loop')
            source(src='assets/mp4/bg.mp4', type='video/mp4')
        .masthead
            .masthead-bg
            .container.h-100
                .row.h-100
                    .col-12.my-auto
                        .masthead-content.text-white.py-5.py-md-0
                            h1.mb-3 Coming Soon!
                            p.mb-5
                                | We're working hard to finish the development of this site. Our target launch date is
                                strong January 2022!
                                | Sign up for updates using the form below!
                            .input-group.input-group-newsletter
                                input.form-control(type='email', placeholder='Enter email...', aria-label='Enter email...', aria-describedby='submit-button')
                                .input-group-append
                                    button#submit-button.btn.btn-secondary(type='button') Notify Me!
        .social-icons
            ul.list-unstyled.text-center.mb-0
                li.list-unstyled-item
                    a(href='#!')
                        i.fab.fa-twitter
                li.list-unstyled-item
                    a(href='#!')
                        i.fab.fa-facebook-f
                li.list-unstyled-item
                    a(href='#!')
                        i.fab.fa-instagram

        // Bootstrap core JS
        script(src='https://code.jquery.com/jquery-3.5.1.min.js')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js')

        // Core theme JS
        script(src='js/scripts.js')
